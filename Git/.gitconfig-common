[core]
eol = lf
whitespace=cr-at-eo,trailing-space,space-before-tab

[color]
ui = auto

[merge]
stat = true

[color "branch"]
current = yellow reverse
local = yellow
remote = green

[color "diff"]
meta = yellow bold
frag = magenta bold
old = red bold
new = green bold
whitespace = red reverse

[color "status"]
added = yellow
changed = green
untracked = cyan

[push]
default = simple

[alias]
ci = commit
co = checkout
# Make index look like working copy of the supplied folder
# i.e. sync all changes (removes, adds) in a given folder
aa = add --all
# Interactively stage by hunk
addbyhunk = add --all -p
st = status
di = diff
# Show diff in index
dc = diff --cached
b = branch
# Show a columned version of the log
l = "!source ~/.githelpers && pretty_git_log"
recent = !git l -20
r = !git recent
# Pull and merge only if no merge bubble is created
pullff = pull --ff-only
# Pull all and merge only if no merge bubble is created
pullall = pull --ff-only --all

[advice]
pushNonFastForward = false
statusHints = false

